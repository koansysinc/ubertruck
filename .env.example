# UberTruck MVP Environment Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ubertruck_db
DB_USER=ubertruck_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# SMS Service (Mock in MVP)
SMS_PROVIDER=mock
SMS_API_KEY=
SMS_API_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Business Configuration
PRICE_PER_TONNE_PER_KM=5
GST_RATE=0.18
MIN_BOOKING_CHARGE=100

# Fleet Capacity (tonnes)
FLEET_10T=10
FLEET_15T=15
FLEET_20T=20

# Corridor Configuration
NALGONDA_LAT=17.0505
NALGONDA_LNG=79.2677
MIRYALGUDA_LAT=16.8764
MIRYALGUDA_LNG=79.5625

# Cache TTL (seconds)
LAMBDA_CACHE_TTL=300
ELASTICACHE_TTL=1800
REDIS_DEFAULT_TTL=3600

# Compliance
RETENTION_YEARS=7
AUDIT_LOG_DAYS=90